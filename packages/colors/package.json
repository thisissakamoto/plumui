{
  "name": "@plumui/colors",
  "version": "1.0.0",
  "description": "A comprehensive color library inspired by TailwindCSS v4, offering a wide range of colors and extended shades for modern web development.",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "devDependencies": {
    "vite": "^7.2.6",
    "typescript": "^5",
    "@types/bun": "latest",
    "@biomejs/biome": "^2.3.10",
    "vite-plugin-dts": "^4.5.4"
  },
  "scripts": {
    "compile": "tsc",
    "build": "vite build",
    "lint": "biome lint .",
    "prepublish": "bun run build",
    "prepublishOnly": "bun run build",
    "format": "biome format --write .",
    "dev": "cd src/examples && bun run index.ts"
  }
}
